<!DOCTYPE html>
<html lang="pt-br">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="CoreInd - A Indústria 4.0">
    <meta name="author" content="Luis Hlatki">

    <title><%= siteName %></title>

    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon" />


</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include ../partials/navigation.ejs %>


        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include ../partials/user_interface.ejs %>

                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Abrir Ordem de Serviço</h1>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">

                        <div class="card-body">

                            <% if(validacao.length > 0) {%>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="alert alert-danger">
                                        <strong>Atenção!</strong>
                                        <ul>
                                            <% for(var i = 0; i < validacao.length; i++) { %>
                                            <li><%= validacao[i].msg %></li>
                                            <% } %>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <% } %>


                            <form action="os-insert" method="POST">

                                <div class="form-group col-sm-12">
                                    <div class="row">

                                        <div class="form-group col-md-3">
                                            <label for="title">Título da OS</label>
                                            <input type="text" class="form-control" id="titleTicket" name="titleTicket"
                                                aria-describedby="titleHelp">
                                        </div>

                                        <div class="form-group col-md-3">

                                            <label for="dateTicket">Data da OS</label>
                                            <div class="input-group date" id="dateTicket" data-target-input="nearest">
                                                <input type="text" class="form-control datetimepicker-input"
                                                    name="dateTicket" data-target="#dateTicket" />
                                                <div class="input-group-append" data-target="#dateTicket"
                                                    data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-3">

                                            <label for="typeTicket">Tipo de OS</label>
                                            <select class="form-control" id="typeTicket" name="typeTicket">

                                                <% if(typetickets.length > 0) {%>
                                                <% for(var i = 0; i < typetickets.length; i++) { %>
                                                <option value="<%= typetickets[i].idTypeTicket %>">
                                                    <%= typetickets[i].titleTypeTicket %></option>
                                                <% } %>
                                                <% } %>


                                            </select>

                                        </div>
                                        <div class="col-md-3">
                                            <label for="criticalityTicket">Críticidade</label>

                                            <select class="form-control" id="criticalityTicket" name="criticalityTicket"
                                                data-source="/api-criticality" data-valueKey="idCriticality"
                                                data-displayKey="titleCriticality">
                                                <option value="0">Não definido</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-md-12">
                                    <label for="description">Descrição da OS</label>
                                    <textarea class="form-control" id="descriptionTicket" name="descriptionTicket"
                                        rows="3"><%= ticketss.descriptionSolicitation %></textarea>
                                </div>

                                <div class="form-group col-sm-12">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label for="location">Localização</label>
                                            <select class="form-control locationTicket" id="locationTicket"
                                                name="locationTicket">

                                                <% if(locations.length > 0) {%>
                                                <% for(var i = 0; i < locations.length; i++) { %>
                                                <option value="<%= locations[i].idLocation %>">
                                                    <%= locations[i].titleLocation %></option>
                                                <% } %>
                                                <% } %>


                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="id_machine">Equipamento</label>
                                            <select class="form-control id_machine" id="id_machine" name="id_machine">
                                                <% if(machines.length > 0) {%>
                                                <% for(var i = 0; i < machines.length; i++) { %>
                                                <option value="<%= machines[i].idMachine %>">
                                                    <%= machines[i].tileMachine %></option>
                                                <% } %>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="id_user">Usuário</label>
                                            <select class="form-control id_user" id="id_user" name="id_user"
                                                data-source="/api-users" data-valueKey="id_user" data-displayKey="name">
                                                <option value="0">Não definido</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label for="status">Status</label>
                                            <select class="form-control" id="statusTicket" name="statusTicket">
                                                <option>Em andamento</option>
                                                <option>Resolvido</option>
                                                <option>Cancelado</option>
                                            </select>
                                        </div>
                                    </div>

                                </div>

                                <% if(ticketss.idSolicitation) { %>
                                <input type="hidden" name="idSolicitation" value="<%= ticketss.idSolicitation %>">
                                <% } %>


                                <button type="submit" class="btn btn-primary">Enviar</button>
                            </form>


                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; <%= siteName %></span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include ../partials/footer.ejs %>


    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/datatables-demo.js"></script>


    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment-with-locales.min.js"></script>

    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>


    <script src="js/user-info.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#dateTicket').datetimepicker({
                locale: 'pt-br',
                defaultDate: moment().format()

            });
        });

        function loadUsers() {

            $('select[data-source]').each(function () {
                var $select = $(this);
                $.ajax({
                    url: $select.attr('data-source'),
                }).then(function (options) {
                    console.log(options.data)
                    options.data.map(function (option) {
                        var $option = $('<option>');

                        $option
                            .val(option[$select.attr('data-valueKey')])
                            .text(option[$select.attr('data-displayKey')]);

                        $select.append($option);
                    });
                    $(".id_user option[value=<%= ticketss.idUser %>]").prop('selected', true);
                    $(".id_machine option[value=<%= ticketss.idMachine %>]").prop('selected', true);
                    $(".locationTicket option[value=<%= ticketss.idLocation %>]").prop('selected', true);
                });
            });
        }



        loadUsers()



    </script>


</body>

</html>