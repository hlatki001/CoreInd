<!DOCTYPE html>
<html lang="pt">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="CoreInd - A Indústria 4.0">
    <meta name="author" content="Luis Hlatki">

    <title><%= siteName %></title>

    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/rowreorder/1.2.6/css/rowReorder.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet">

    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/css/tempusdominus-bootstrap-4.min.css" />
        <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon" />


</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include ../partials/navigation.ejs %>


        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%- include ../partials/user_interface.ejs %>

                <!-- End of Topbar -->

                <!-- Begin Page Content -->


                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Ordem de Serviço - Nº <%=ticket[0].idTicket %> por <bold>
                                <%=ticket[0].name %></bold>
                        </h1>
                    </div>

                    <div class="row">

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Título da OS</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <%=ticket[0].titleTicket %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Localização</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <%=ticket[0].titleLocation %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="col">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Equipamento</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <%=ticket[0].tileMachine %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pending Requests Card Example -->
                        <div class="col">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Status</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <%=ticket[0].statusTicket %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- Pending Requests Card Example -->
                        <div class="col">
                            <div class="card border-left-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Tipo de OS</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <%=ticket[0].titleTypeTicket %></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="margin-top: 35px;">

                        <div class="col-lg-12">

                            <!-- Basic Card Example -->
                            <div class="card shadow border-left-primary">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Descrição da OS</h6>
                                </div>
                                <div class="card-body">
                                    <%=ticket[0].descriptionTicket %>
                                </div>
                            </div>

                        </div>



                    </div>

                </div>

                <div class="container-fluid" style="margin-top: 35px;">

                    <% if(validacao.length > 0) {%>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-danger">
                                <strong>Atenção!</strong>
                                <ul>
                                    <% for(var i = 0; i < validacao.length; i++) { %>
                                    <li><%= validacao[i].msg %></li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <% } %>


                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800 mb-3">Interações</h1>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4 border-left-primary">

                        <% if (ticket[0].id_user == user_id || role <= 1) { %>

                        <div class="card-header py-3">
                            <a href="#" data-toggle="modal" data-target="#addInteraction"
                                class="btn btn-primary btn-icon-split">
                                <span class="icon text-white-50">
                                    <i class="fas fa-flag"></i>
                                </span>
                                <span class="text">Nova Interação</span>
                            </a>
                        </div>

                        <% } %>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Título</th>
                                            <th>Descrição</th>
                                            <th>Técnico</th>
                                            <th>Data da Interação</th>
                                            <th>Status</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Título</th>
                                            <th>Descrição</th>
                                            <th>Técnico</th>
                                            <th>Data da Interação</th>
                                            <th>Status</th>
                                            <th>Ações</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>

                                        <% if(interactions.length > 0) { %>
                                        <% for(var i = 0; i < interactions.length; i++) { %>

                                        <tr>
                                            <td><%=interactions[i].titleInteraction %></td>
                                            <td><%=interactions[i].descriptionInteraction %></td>
                                            <td><%=interactions[i].name %></td>
                                            <td><%=interactions[i].dateInteraction %></td>
                                            <td><%=interactions[i].statusInteraction %></td>
                                            <td style="text-align: center;">
                                                <a href="#" data-toggle="modal"
                                                    data-target="#viewInteractionId<%=interactions[i].idInteraction %>"
                                                    class="btn btn-info btn-circle btn-sm">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a href="#" data-toggle="modal"
                                                    data-target="#editInteractionId<%=interactions[i].idInteraction %>"
                                                    class="btn btn-warning btn-circle btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="#" data-toggle="modal"
                                                    data-target="#deleteInteractionId<%=interactions[i].idInteraction %>"
                                                    class="btn btn-danger btn-circle btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>

                                        <!-- Interaction Modal-->
                                        <div class="modal fade"
                                            id="viewInteractionId<%=interactions[i].idInteraction %>" tabindex="-1"
                                            role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Detalhes da
                                                            Interação</h5>
                                                        <button class="close" type="button" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form>
                                                            <div class="form-group col-md-12">
                                                                <label for="titleInteraction">Título da
                                                                    Interação</label>
                                                                <input type="text" class="form-control"
                                                                    id="titleInteraction" name="titleInteraction"
                                                                    aria-describedby="titleHelp"
                                                                    value="<%=interactions[i].titleInteraction %>"
                                                                    disabled>
                                                            </div>
                                                            <div class="form-group col-md-12">
                                                                <label for="description">Descrição da Interação</label>
                                                                <textarea class="form-control"
                                                                    id="descriptionInteraction"
                                                                    name="descriptionInteraction" rows="3"
                                                                    disabled><%=interactions[i].descriptionInteraction %></textarea>
                                                            </div>


                                                            <div class="form-group col-md-12">
                                                                <label for="statusInteraction">Status</label>
                                                                <select class="form-control" id="statusInteraction"
                                                                    name="statusInteraction" disabled>

                                                                    <% if(interactions[i].statusInteraction == "Em andamento") { %>
                                                                    <option value="Em andamento" selected>Em andamento
                                                                    </option>
                                                                    <option value="Resolvido">Resolvido</option>
                                                                    <option value="Cancelado">Cancelado</option>
                                                                    <% } %>
                                                                    <% if(interactions[i].statusInteraction == "Resolvido") { %>
                                                                    <option value="Em andamento">Em andamento</option>
                                                                    <option value="Resolvido" selected>Resolvido
                                                                    </option>
                                                                    <option value="Cancelado">Cancelado</option>
                                                                    <% } %>
                                                                    <% if(interactions[i].statusInteraction == "Cancelado") { %>
                                                                    <option value="Em andamento">Em andamento</option>
                                                                    <option value="Resolvido">Resolvido</option>
                                                                    <option value="Cancelado" selected>Cancelado
                                                                    </option>
                                                                    <% } %>

                                                                </select>
                                                            </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button class="btn btn-secondary" type="button"
                                                            data-dismiss="modal">Fechar</button>
                                                    </div>
                                                    </form>


                                                </div>
                                            </div>
                                        </div>

                                        <!-- Interaction Modal-->
                                        <div class="modal fade"
                                            id="editInteractionId<%=interactions[i].idInteraction %>" tabindex="-1"
                                            role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Editar
                                                            Interação</h5>
                                                        <button class="close" type="button" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form
                                                            action="interactions-update?id=<%=interactions[0].idTicket %>&idInteraction=<%=interactions[0].idInteraction %>"
                                                            method="POST">
                                                            <div class="form-group col-md-12">
                                                                <label for="titleInteraction">Título da
                                                                    Interação</label>
                                                                <input type="text" class="form-control"
                                                                    id="titleInteraction" name="titleInteraction"
                                                                    aria-describedby="titleHelp"
                                                                    value="<%=interactions[i].titleInteraction %>">
                                                            </div>
                                                            <div class="form-group col-md-12">
                                                                <label for="description">Descrição da Interação</label>
                                                                <textarea class="form-control"
                                                                    id="descriptionInteraction"
                                                                    name="descriptionInteraction"
                                                                    rows="3"><%=interactions[i].descriptionInteraction %></textarea>
                                                            </div>


                                                            <div class="form-group col-md-12">
                                                                <label for="statusInteraction">Status</label>
                                                                <select class="form-control" id="statusInteraction"
                                                                    name="statusInteraction">

                                                                    <% if(interactions[i].statusInteraction == "Em andamento") { %>
                                                                    <option value="Em andamento" selected>Em andamento
                                                                    </option>
                                                                    <option value="Resolvido">Resolvido</option>
                                                                    <option value="Cancelado">Cancelado</option>
                                                                    <% } %>
                                                                    <% if(interactions[i].statusInteraction == "Resolvido") { %>
                                                                    <option value="Em andamento">Em andamento</option>
                                                                    <option value="Resolvido" selected>Resolvido
                                                                    </option>
                                                                    <option value="Cancelado">Cancelado</option>
                                                                    <% } %>
                                                                    <% if(interactions[i].statusInteraction == "Cancelado") { %>
                                                                    <option value="Em andamento">Em andamento</option>
                                                                    <option value="Resolvido">Resolvido</option>
                                                                    <option value="Cancelado" selected>Cancelado
                                                                    </option>
                                                                    <% } %>

                                                                </select>
                                                            </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button class="btn btn-secondary" type="button"
                                                            data-dismiss="modal">Cancelar</button>
                                                        <button class="btn btn-primary" type="submit">Enviar</button>
                                                    </div>
                                                    </form>


                                                </div>
                                            </div>
                                        </div>

                                        <div class="modal fade"
                                            id="deleteInteractionId<%=interactions[i].idInteraction %>" tabindex="-1"
                                            role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Remover
                                                            Interação?</h5>
                                                        <button class="close" type="button" data-dismiss="modal"
                                                            aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">Deseja realmente remover a interação:
                                                        <%= interactions[i].titleInteraction %>?</div>
                                                    <div class="modal-footer">
                                                        <button class="btn btn-secondary" type="button"
                                                            data-dismiss="modal">Cancelar</button>
                                                        <a class="btn btn-primary"
                                                            href="interactions-delete?id=<%= interactions[i].idInteraction %>&idTicket=<%= interactions[i].ticketInteraction %>">Remover</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>






                                        <% } %>

                                        <% } else {%>

                                        <% } %>





                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>



            </div>
            <!-- End of Main Content -->



            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; <%= siteName %></span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include ../partials/footer.ejs %>


    <!-- Interaction Modal-->
    <div class="modal fade" id="addInteraction" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Adicionar nova Interação</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="interactions-insert?id=<%=ticket[0].idTicket %>" method="POST">
                        <div class="form-group col-md-12">
                            <label for="titleInteraction">Título da Interação</label>
                            <input type="text" class="form-control" id="titleInteraction" name="titleInteraction"
                                aria-describedby="titleHelp">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="descriptionInteraction">Descrição da Interação</label>
                            <textarea class="form-control" id="descriptionInteraction" name="descriptionInteraction"
                                rows="3"></textarea>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="dateInteraction">Data da Interação</label>
                            <div class="input-group date" id="dateInteraction" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" name="dateInteraction"
                                    data-target="#dateInteraction" />
                                <div class="input-group-append" data-target="#dateInteraction"
                                    data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>



                        <div class="form-group col-md-12">
                            <label for="statusInteraction">Status</label>
                            <select class="form-control" id="statusInteraction" name="statusInteraction">
                                <option value="Em andamento" selected>Em andamento</option>
                                <option value="Resolvido">Resolvido</option>
                                <option value="Cancelado">Cancelado</option>
                            </select>
                        </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
                    <button class="btn btn-primary" type="submit">Enviar</button>
                </div>
                </form>


            </div>
        </div>
    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
    <script src="https://momentjs.com/downloads/moment.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/rowreorder/1.2.6/js/dataTables.rowReorder.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>


    <!-- Page level custom scripts -->
    <script>

        $(document).ready(function () {
            $('#dataTable').DataTable({
                responsive: true,
                processing: true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }
            });
        });


    </script>

    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment-with-locales.min.js"></script>

    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.1/js/tempusdominus-bootstrap-4.min.js"></script>

    <script src="js/user-info.js"></script>


    <script type="text/javascript">
        $(function () {
            $('#dateInteraction').datetimepicker({
                locale: 'pt-br'
            });
        });

        var d = new Date();
        var n = "29/01/2020 14:30";


        var check = moment('<%=ticket[0].dateTicket %>', 'YYYY/MM/DD');

        var month = check.format('MM');
        var day = check.format('D');
        var year = check.format('YYYY');


    </script>


</body>

</html>