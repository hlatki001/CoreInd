    <!-- Page level custom scripts -->
    <script>

        $.fn.dataTable.ext.search.push(
            function (settings, data, dataIndex) {
                var min = $('#min').datepicker("getDate");
                var max = $('#max').datepicker("getDate");
                var startDate = new Date(data[4]);

                if (min == null && max == null) { return true; }
                if (min == null && startDate <= max) { return true; }
                if (max == null && startDate >= min) { return true; }
                if (startDate <= max && startDate >= min) { return true; }
                return false;
            }
        );


        // Call the dataTables jQuery plugin
        $(document).ready(function () {
            var table = $('#dataTable').DataTable({
                responsive: true,
                processing: true,
                "ajax": "http://" + actualURL + "/api-get-tickets/",
                columns: [
                    { data: 'titleTicket' },
                    { data: 'titleLocation' },
                    { data: 'tileMachine' },
                    { data: 'name' },
                    {
                        data: 'dateTicket',
                        render: function (data, type, row) {
                            return moment(row.dateTicket).format("DD/MM/YYYY");


                        }
                    },
                    { data: 'titleTypeTicket' },
                    { data: 'titleCriticality' },
                    { data: 'statusTicket' },

                ],
                initComplete: function () {
                    this.api().columns([1, 2, 3, 5, 6, 7]).every(function () {
                        var column = this;
                        var th = $("#dataTable").find("th").eq(column.index());
                        var select = $('<select><option value="">' + th.text() + '</option></select>')
                            .on('change', function () {
                                var val = $.fn.dataTable.util.escapeRegex(
                                    $(this).val());

                                column.search(val ? '^' + val + '$' : '', true, false)
                                    .draw();
                            });

                        $("#Filtros").append(select);



                        column.data().unique().sort().each(function (d, j) {
                            $(select).append('<option value="' + d + '">' + d + '</option>')
                        });
                    });
                },
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                },

            });

            $("#min").datepicker({
                dateFormat: 'dd/mm/yy '

            });

            $("#max").datepicker({
                dateFormat: 'dd/mm/yy'

            });


            $("#min").datepicker({ onSelect: function () { table.draw(); }, changeMonth: true, changeYear: true });
            $("#max").datepicker({ onSelect: function () { table.draw(); }, changeMonth: true, changeYear: true });




            $('#min, #max').change(function () {
                table.draw();
            });
            var buttons = new $.fn.dataTable.Buttons(table, {
                buttons: [
                    {
                        extend: 'collection',
                        text: 'Exportar Relatório',
                        buttons: [
                            'copy',
                            'excel',
                            'csv',
                            'pdf',
                            'print'
                        ]
                    }
                ]
            }).container().appendTo($('#Buttons'));

        });

    </script>


