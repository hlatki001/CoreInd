  <script>
    var myChart = null;
    var myBarChart = null;

    Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
    Chart.defaults.global.defaultFontColor = '#858796';

    function BuildChart(labels, values, colors) {
      var data = {
        labels: labels,
        datasets: [{
          data: values,
          backgroundColor: colors,
        }],
      };
      var ctx = document.getElementById("myPieChart");
      myChart = new Chart(ctx, {
        type: 'doughnut',
        data: data,
        options: {
          maintainAspectRatio: false,

          tooltips: {
            backgroundColor: "rgb(255,255,255)",
            bodyFontColor: "#858796",
            borderColor: '#dddfeb',
            borderWidth: 1,
            xPadding: 15,
            yPadding: 15,
            displayColors: false,
            caretPadding: 10,
          },
          legend: {
            display: false
          },
          cutoutPercentage: 80,
        }
      });

      return myChart;
    }



    function carrega_info() {

      var selectedUser = $('#id_user').find(":selected").val();


      // criar xmlhttprequest
      var xhr = new XMLHttpRequest();
      xhr.open("GET", "http://" + actualURL + "/tarefas-completadas/" + selectedUser);

      xhr.onload = function () {
        if (xhr.status === 200) {

          var data = JSON.parse(xhr.responseText);
          $('#tarefas-pendentes').html(data.aberto[0].countOS);
          $('#tarefas-resolvidas').html(data.resolvido[0].countOS);
          $('#tarefas-total').html(data.total[0].countOS);
        }
      }
      xhr.send();
    }

    function carrega_grafico() {
      // criar xmlhttprequest
      var selectedUser = $('#id_user').find(":selected").val();

      var xhr = new XMLHttpRequest();
      xhr.open("GET", "http://" + actualURL + "/tarefas-graph/" + selectedUser);

      xhr.onload = function () {
        if (xhr.status === 200) {
          var data = JSON.parse(xhr.responseText);
          var labels = data.data.map(function (e) {
            return e.titleTypeTicket;
          });
          var values = data.data.map(function (e) {
            return e.Total;
          });
          var colors = data.data.map(function (e) {
            return e.colorTypeTycket;
          });
          BuildChart(labels, values, colors);

          if (values.length == 0) {
            document.getElementById("myPieChart").style.display = "none";
            document.getElementById("no-data").style.display = "block";
          }

          for (i = 0; i < labels.length; i++) {
            $('#labels-chart').append(
              '<span class="mr-2"><i class="fas fa-circle text-primary" style="color:' + data.data[i].colorTypeTycket + ' !important "></i> ' + data.data[i].titleTypeTicket + '</span>'
            );
          }
        }
      }
      xhr.send();
    }

    function number_format(number, decimals, dec_point, thousands_sep) {
      // *     example: number_format(1234.56, 2, ',', ' ');
      // *     return: '1 234,56'
      number = (number + '').replace(',', '').replace(' ', '');
      var n = !isFinite(+number) ? 0 : +number,
        prec = !isFinite(+decimals) ? 0 : Math.abs(decimals),
        sep = (typeof thousands_sep === 'undefined') ? ',' : thousands_sep,
        dec = (typeof dec_point === 'undefined') ? '.' : dec_point,
        s = '',
        toFixedFix = function (n, prec) {
          var k = Math.pow(10, prec);
          return '' + Math.round(n * k) / k;
        };
      // Fix for IE parseFloat(0.55).toFixed(0) = 0;
      s = (prec ? toFixedFix(n, prec) : '' + Math.round(n)).split('.');
      if (s[0].length > 3) {
        s[0] = s[0].replace(/\B(?=(?:\d{3})+(?!\d))/g, sep);
      }
      if ((s[1] || '').length < prec) {
        s[1] = s[1] || '';
        s[1] += new Array(prec - s[1].length + 1).join('0');
      }
      return s.join(dec);
    }


    function BuildChart2(meses) {
      data = {
        labels: ["Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho", "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro"],
        datasets: [{
          label: "Total de OS",
          backgroundColor: "#4e73df",
          hoverBackgroundColor: "#2e59d9",
          borderColor: "#4e73df",
          data: meses,
        }],
      }
      // Bar Chart Example
      var ctx = document.getElementById("myBarChart");
      myBarChart = new Chart(ctx, {
        type: 'bar',
        data: data,
        options: {
          maintainAspectRatio: false,
          layout: {
            padding: {
              left: 10,
              right: 25,
              top: 25,
              bottom: 0
            }
          },
          scales: {
            xAxes: [{
              time: {
                unit: 'month'
              },
              gridLines: {
                display: false,
                drawBorder: false
              },
              ticks: {
                maxTicksLimit: 12
              },
              maxBarThickness: 25,
            }],
            yAxes: [{
              ticks: {
                min: 0,
                max: 10,
                maxTicksLimit: 12,
                padding: 10,
              },
              gridLines: {
                color: "rgb(234, 236, 244)",
                zeroLineColor: "rgb(234, 236, 244)",
                drawBorder: false,
                borderDash: [2],
                zeroLineBorderDash: [2]
              }
            }],
          },
          legend: {
            display: false
          },
          tooltips: {
            titleMarginBottom: 10,
            titleFontColor: '#6e707e',
            titleFontSize: 14,
            backgroundColor: "rgb(255,255,255)",
            bodyFontColor: "#858796",
            borderColor: '#dddfeb',
            borderWidth: 1,
            xPadding: 15,
            yPadding: 15,
            displayColors: false,
            caretPadding: 10,
            callbacks: {
              label: function (tooltipItem, chart) {
                var datasetLabel = chart.datasets[tooltipItem.datasetIndex].label || '';
                return datasetLabel + ': ' + number_format(tooltipItem.yLabel);
              }
            }
          },
        }
      });
      return myBarChart;
    }

    function carrega_grafico2() {

      var selectedUser = $('#id_user').find(":selected").val();

      // criar xmlhttprequest
      var xhr = new XMLHttpRequest();
      xhr.open("GET", "http://" + actualURL + "/tarefas-graph-mes/" + selectedUser);

      xhr.onload = function () {
        if (xhr.status === 200) {
          var data = JSON.parse(xhr.responseText);

          var jan = 0;
          var fev = 0;
          var mar = 0;
          var abr = 0;
          var mai = 0;
          var jun = 0;
          var jul = 0;
          var ago = 0;
          var set = 0;
          var out = 0;
          var nov = 0;
          var dez = 0;

          for (let i = 0; i < data.data.length; i++) {
            const element = data.data[i];

            var check = moment(data.data[i].dateTicket, 'DD/MM/YYYY');
            var month = check.format('MM');
            if (month == 01) {
              jan++;
            }
            if (month == 02) {
              fev++;
            }
            if (month == 03) {
              mar++;
            }
            if (month == 04) {
              abr++;
            }
            if (month == 05) {
              mai++;
            }
            if (month == 06) {
              jun++;
            }
            if (month == 07) {
              jul++;
            }
            if (month == 08) {
              ago++;
            }
            if (month == 09) {
              set++;
            }
            if (month == 10) {
              out++;
            }
            if (month == 11) {
              nov++;
            }
            if (month == 12) {
              dez++;
            }
          }
          var meses = [jan, fev, mar, abr, mai, jun, jul, ago, set, out, nov, dez];
          BuildChart2(meses);
        }
      }
      xhr.send();
    }

    function loadUsers() {

      $('select[data-source]').each(function () {
        var $select = $(this);
        $.ajax({
          url: $select.attr('data-source'),
        }).then(function (options) {
          console.log(options.data)
          options.data.map(function (option) {
            var $option = $('<option>');

            $option
              .val(option[$select.attr('data-valueKey')])
              .text(option[$select.attr('data-displayKey')]);

            $select.append($option);

          });

        });
      });
    }

    loadUsers();




    $('#id_user').on('change', function () {
      carrega_info();
      myChart.destroy();
      myBarChart.destroy();
      $('#labels-chart').empty().append();
      document.getElementById("no-data").style.display = "none";
      carrega_grafico();
      carrega_grafico2();

    });
    carrega_info();
    carrega_grafico();
    carrega_grafico2();


  </script>



